{
    "name": "pactumjs-api-contracttest",
    "version": "2.0.0",
    "description": "Template para testes de api e contrato utilizando o pactumjs",
    "scripts": {
        "test": "concurrently \"npm run test:api:html\" \"npm run test:api:junit\"",
        "test:api:html": "AUTHORIZATION='' CONTRACTDATA='' CUSTOMPARAM='' NAMEFILE='configContract' DEFAULTPATH='tests/pactum' ./node_modules/.bin/mocha --timeout 90000 --reporter mochawesome --reporter-options reportDir=./report/ src/Test/index.spec.js",
        "test:api:junit": "mocha --timeout 90000 --reporter mocha-junit-reporter --reporter-options mochaFile=./report/test-results.xml src/Test/index.spec.js"
    },
    "engines": {
        "node": ">=16"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aribeiro26/pactumjs.git"
    },
    "keywords": [
        "contractTest",
        "teste",
        "de",
        "contrato",
        "api"
    ],
    "author": "alexisandro ribeiro - (alexetec.ribeiro@gmail.com)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/aribeiro26/pactumjs/issues"
    },
    "homepage": "https://github.com/aribeiro26/pactumjs#readme",
    "dependencies": {
        "axios": "^1.6.8",
        "chai": "^4.3.4",
        "concurrently": "^7.2.2",
        "dotenv": "^10.0.0",
        "lorem-ipsum": "^2.0.8",
        "pactum-flow-plugin": "0.1.4",
        "shelljs": "0.8.5",
        "uvu": "^0.1.0",
        "mocha": "^10.0.0",
        "mochawesome": "^7.1.3",
        "pactum": "^3.1.10",
        "pactum-json-reporter": "^1.0.2"
    },
    "devDependencies": {
        "mocha-junit-reporter": "^2.0.2"
    }
}
